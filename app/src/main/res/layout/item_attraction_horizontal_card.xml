<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_height"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <!-- 左侧图片区域 -->
        <ImageView
            android:id="@+id/attraction_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hong_kong_disneyland" />

        <!-- 右侧信息区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 景点名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/attraction_chinese_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="香港迪士尼樂園"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/attraction_english_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hong Kong Disneyland"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- 评分和距离 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/attraction_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★ 4.5"
                    android:textSize="14sp"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/attraction_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 15.2km"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <!-- 弹性空间 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 添加到行程按钮 -->
            <Button
                android:id="@+id/add_to_plan_button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="加入行程"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_500" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>